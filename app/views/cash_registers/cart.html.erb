<h1>Your Cart</h1>

<% if @cart.items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <ul>
    <% @cart.items.each do |item_code, quantity| %>
      <li><%= @store_products[item_code][:name] %> (x<%= quantity %>)</li>
    <% end %>
  </ul>

  <p><strong>Total: <%= number_to_currency(@total_price, unit: "â‚¬") %></strong></p> <!-- Display the total price -->
<% end %>

<%= link_to 'Back to Products', items_path %>
<%= link_to 'Proceed to Checkout', checkout_path %>

